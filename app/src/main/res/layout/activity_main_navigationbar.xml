<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:id="@+id/activity_main_navigationbar">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@mipmap/home_seclect"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linear1_iv"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/homepage"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:id="@+id/linear1_tv"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@mipmap/service_unseclect"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linear2_iv"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/service"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:id="@+id/linear2_tv"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@mipmap/my_unseclect"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linear3_iv"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/user"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:id="@+id/linear3_tv"
            />
    </LinearLayout>

</LinearLayout>