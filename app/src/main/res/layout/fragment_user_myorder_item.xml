<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/myorder_item_linear"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/myorder_item_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myorder_item_goodname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="这里是物品的名字"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/recyclerview"/>

            <TextView
                android:id="@+id/myorder_item_faqiren"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="这里是交易发起人"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/recyclerview"/>

            <TextView
                android:id="@+id/myorder_item_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="这里是交易地点"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/recyclerview"/>

            <TextView
                android:id="@+id/myorder_item_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="这里是发起时间"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/recyclerview"/>

            <LinearLayout
                android:id="@+id/myorder_item_btnlinear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myorder_item_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="这里是交易状态"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/recyclerview"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="40px"/>

</LinearLayout>