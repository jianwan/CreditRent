<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/tablayout_item_linear"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/tablayout_item_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tablayout_item_goodname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="这里是书的名字"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/recyclerview"/>

            <TextView
                android:id="@+id/tablayout_item_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="这里是物品描述"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/recyclerview"/>

            <TextView
                android:id="@+id/tablayout_item_sellorrent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="这里是出租还是出售"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/recyclerview"/>

            <TextView
                android:id="@+id/tablayout_item_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="这里是价格"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/recyclerview"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/tablayout_item_changeinformation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="修改物品信息"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/tablayout_item_umpublished"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="下架物品"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40px"/>

</LinearLayout>